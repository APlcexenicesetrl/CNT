<Window x:Class="CNT_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CNT_GUI"
        mc:Ignorable="d"
        Title="CNT GUI" Height="600" Width="1200" Icon="/ICON.ico" WindowStyle="None" Background="{x:Null}" Foreground="{x:Null}">
    <Border CornerRadius="10" Background="White">
        <Grid>
            <Border Height="50px" VerticalAlignment="Top" MouseDown="Window_Move">
                <Grid>
                    <TextBlock Text="CNT GUI" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25"/>
                    <Button Content="X" FontSize="25px" HorizontalAlignment="Right" VerticalAlignment="Center" Width="50px" Height="50px" BorderBrush="{x:Null}" Foreground="Red" Background="White" Click="Exit">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10"></Setter>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Border>
            <Grid>

            </Grid>
        </Grid>


    </Border>
</Window>

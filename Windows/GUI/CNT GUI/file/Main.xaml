<Window x:Class="CNT_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CNT_GUI"
        mc:Ignorable="d"
        Title="CNT GUI" Height="600" Width="1200" Icon="/Resources/imgs/program-icon.ico" Background="{x:Null}" Foreground="{x:Null}" WindowStyle="ThreeDBorderWindow">
    <Border CornerRadius="0,0,10,10" Background="White">
        <Grid>
            <Menu DockPanel.Dock="Top" FontSize="20px" Background="White" BorderBrush="#666" Foreground="#333">
                <MenuItem Header="_File">
                    <MenuItem Header="_New" Click="Menu_New" />
                    <MenuItem Header="_Open" Click="Menu_Open" />
                    <MenuItem Header="_Save" Click="Menu_Save" />
                    <Separator />
                    <MenuItem Header="E_xit" Click="Menu_Exit" />
                </MenuItem>
            </Menu>
        </Grid>
    </Border>
</Window>
